{
  "name": "locha",
  "description": "Loud Mocha (locha) runs specs twice - first time all, second time just the failing ones with extra verbosity",
  "version": "1.0.0",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/locha/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/locha#readme",
  "keywords": [
    "bdd",
    "mocha",
    "run",
    "runner",
    "test",
    "testing",
    "util",
    "utility"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/locha.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard 'src/*.js'",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js"
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.9.1",
    "deps-ok": "1.2.1",
    "git-issues": "1.3.1",
    "license-checker": "14.0.0",
    "mocha": "3.5.0",
    "nsp": "2.7.0",
    "pre-git": "3.15.3",
    "prettier-standard": "6.0.0",
    "standard": "10.0.3"
  }
}
