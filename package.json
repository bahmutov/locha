{
  "name": "locha",
  "description": "Loud Mocha (locha) runs specs twice - first time all, second time just the failing ones with extra verbosity",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/locha/issues",
  "bin": {
    "locha": "bin/locha.js"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "bin",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/locha#readme",
  "keywords": [
    "bdd",
    "mocha",
    "run",
    "runner",
    "test",
    "testing",
    "util",
    "utility"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/locha.git"
  },
  "scripts": {
    "ban": "ban",
    "demo": "./bin/locha.js demo/failing-spec.js --env DEBUG:failing",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix 'src/*.js' 'test/*.js' 'bin/*.js'",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard 'src/*.js' 'test/*.js' 'bin/*.js'",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "ava --verbose test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "release": {
    "analyzeCommits": "simple-commit-message",
    "generateNotes": "github-post-release",
    "verifyRelease": {
      "path": "dont-crack",
      "test-against": []
    }
  },
  "devDependencies": {
    "ava": "0.22.0",
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.9.1",
    "deps-ok": "1.2.1",
    "dont-crack": "1.2.1",
    "git-issues": "1.3.1",
    "github-post-release": "1.13.1",
    "license-checker": "14.0.0",
    "nsp": "2.7.0",
    "pre-git": "3.15.3",
    "prettier-standard": "6.0.0",
    "semantic-release": "7.0.2",
    "simple-commit-message": "3.3.1",
    "standard": "10.0.3"
  },
  "dependencies": {
    "check-more-types": "2.24.0",
    "debug": "3.0.1",
    "lazy-ass": "1.6.0",
    "leave-tests": "1.0.0",
    "minimist": "1.2.0",
    "mocha": "3.5.0",
    "pluralize": "7.0.0",
    "ramda": "0.24.1"
  }
}
